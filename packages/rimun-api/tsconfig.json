{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "noErrorTruncation": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "./src/**/*.test.ts",
    "./src/**/*.spec.ts",
    "./src/**/*.mock.ts"
  ],
  "include": ["./src/**/*.ts", "*.ts", "../../.eslintrc.cjs"]
}
